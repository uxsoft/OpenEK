<UserControl x:Class="OpenEK.Windows.Views.Statistic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenEK.Windows.Views"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:Statistic}}, Path=Title}" 
                   d:Text="CPU" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#99000000" />
        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:Statistic}}, Path=Value}" 
                   d:Text="90 C" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
    </Grid>
</UserControl>
